{
  "name": "Excavation Permit",
  "description": "Permit for excavation work, ensuring all underground hazards and safety measures are addressed.",
  "fields": [
    { "label": "Location", "type": "text", "required": true },
    { "label": "Date", "type": "date", "required": true },
    { "label": "Work Description", "type": "textarea", "required": true },
    { "label": "Depth of Excavation (meters)", "type": "number", "required": true },
    { "label": "Underground Services Checked", "type": "checkbox", "required": true },
    { "label": "Shoring/Protection Measures", "type": "textarea", "required": true },
    { "label": "Personnel Involved", "type": "text", "required": true },
    { "label": "Supervisor", "type": "text", "required": true },
    { "label": "Signatures", "type": "signature", "required": true }
  ]
}
